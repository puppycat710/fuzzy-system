<!DOCTYPE html>
<html amp lang="pt-br">
  <head>
    {% include "seo.njk" %}
    {% include "seoSerie.njk" %}
    <!-- AMP -->
    <script async src="https://cdn.ampproject.org/v0.js"></script>
    <script async custom-element="amp-iframe" src="https://cdn.ampproject.org/v0/amp-iframe-0.1.js"></script>
    <script async custom-element="amp-mega-menu" src="https://cdn.ampproject.org/v0/amp-mega-menu-0.1.js"></script>
    <script async custom-element="amp-bind" src="https://cdn.ampproject.org/v0/amp-bind-0.1.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    {% include "styles.njk" %}
    <style amp-boilerplate>
      body {
        -webkit-animation: -amp-start 8s steps(1, end) 0s 1 normal both;
        -moz-animation: -amp-start 8s steps(1, end) 0s 1 normal both;
        -ms-animation: -amp-start 8s steps(1, end) 0s 1 normal both;
        animation: -amp-start 8s steps(1, end) 0s 1 normal both;
      }
      @-webkit-keyframes -amp-start {
        from {
          visibility: hidden;
        }
        to {
          visibility: visible;
        }
      }
      @keyframes -amp-start {
        from {
          visibility: hidden;
        }
        to {
          visibility: visible;
        }
      }
    </style>
    <noscript>
      <style amp-boilerplate>
        body {
          -webkit-animation: none;
          -moz-animation: none;
          -ms-animation: none;
          animation: none;
        }
      </style>
    </noscript>
    {% include "adsense.njk" %}
    {# {% include "devTool.njk" %} #}
  </head>
  <body>
    {% include "headerMenu.njk" %}
    {{ content | safe }}
    {% include "footer.njk" %}
    <!-- Carregue o JS após o HTML -->
    <script>
      document.getElementById('play-button').addEventListener('click', () => {
        const progressBar = document.querySelector('.vjs-progress-holder');
        const displayTime = document.getElementById('display-time');
        // Verifique se a progress bar foi encontrada
        if (progressBar) { // Função para pegar o valor de aria-valuetext e exibir
          const updateProgress = () => {
            const ariaValueText = progressBar.getAttribute('aria-valuetext');
            if (ariaValueText) { // Mostrar o tempo atual extraído do atributo
              displayTime.textContent = `Tempo Atual: ${
                ariaValueText.split(' of ')[0]
              }`;
              console.log('Tempo Atual:', ariaValueText); // Log para depuração
            }
          };
          // Atualizar a cada 1 segundo
          const intervalId = setInterval(updateProgress, 1000);
          // Limpeza do intervalo após 10 segundos, para evitar execução infinita (se necessário)
          setTimeout(() => clearInterval(intervalId), 10000); // Stop after 10 seconds
        } else {
          console.error('Elemento com classe "vjs-progress-holder" não encontrado.');
        }
      });
    </script>
    <script defer src="/js/monetag-vignatte.js" defer></script>
    <script defer src="/js/render-banner.js" defer></script>
    <script defer src="/js/play-btn.js" defer></script>
    <script defer src="/js/disqus.js" defer></script>
    <script defer src="/js/search.js" defer></script>
    <script defer src="/js/amp.js" defer></script>
  </body>
</html>