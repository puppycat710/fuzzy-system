<div class="grid justify-center gap-3 text-sm items-center p-4">
  <h1 class="sm:text-lg text-sm pl-1">Novidades</h1>
  <amp-base-carousel
    width="1200"
    height="360"
    class="sm:!w-[1200px] !w-[330px]"
    layout="flex-item"
    visible-count="(min-width: 800px) 5, 2"
    advance-count="(min-width: 800px) 5, 2">
    {% for movie in movies -%}
      <a href="/filmes/{{ movie.slug }}/">
        <div class="flex flex-col gap-1 p-1">
          <img src={{ movie.coverImage }} width="226" height="316" alt={{ movie.slug }} layout="responsive"></img>
          <h1 class="text-xs">{{ movie.title }}</h1>
        </div>
      </a>
    {%- endfor %}
  </amp-base-carousel>
</div>